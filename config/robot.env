# robot.env - Environment variables for G1 robot operation
# Story 1-6: Dual-Environment Deployment
#
# Usage: source this file before running g1_inspector on the robot
#   source config/robot.env
#
# Add to ~/.bashrc for automatic loading:
#   echo 'source ~/g1_inspector/config/robot.env' >> ~/.bashrc

# CycloneDDS configuration for robot-local DDS communication
# Uses loopback interface since all G1 components run on the same machine
export CYCLONEDDS_URI=file://${HOME}/g1_inspector/config/cyclonedds-robot.xml

# Library paths
# - CUDA (required for GPU operations on Jetson)
# - Local libs (CycloneDDS, Livox SDK2)
export LD_LIBRARY_PATH=/usr/local/cuda-11.4/lib64:/usr/local/lib:${LD_LIBRARY_PATH:-}

# CUDA binaries
export PATH=/usr/local/cuda-11.4/bin:${PATH:-}

# Optional: Project root for path resolution
export G1_INSPECTOR_ROOT="${HOME}/g1_inspector"
