<?xml version="1.0" encoding="UTF-8"?>
<!-- CycloneDDS Configuration for G1 Robot Communication over WiFi -->
<!-- Robot WiFi IP: 192.168.124.164 -->
<!-- Your host must be on the same subnet (192.168.124.x) -->
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="0">
    <General>
      <!-- Use wifi interface - set to your interface name -->
      <NetworkInterfaceAddress>wlp4s0</NetworkInterfaceAddress>
    </General>
    <Discovery>
      <!-- Explicitly list robot for faster discovery -->
      <Peers>
        <Peer address="192.168.124.164"/>
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>
